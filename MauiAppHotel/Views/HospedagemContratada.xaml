<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="Gold"
               FontFamily="Italianno"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <StackLayout Orientation="Horizontal" >

                <StackLayout HorizontalOptions="StartAndExpand">
                    <Label Text="Adultos: "
                           TextColor="Gold"/>
                    <Label Text="{Binding QntAdultos}"/>
                </StackLayout>
                    
                <StackLayout>
                    <Label Text="CrianÃ§as: "
                           TextColor="Gold"/>
                    <Label Text="{Binding QntCriancas}"/>
                </StackLayout>

            </StackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">

                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:"
                       TextColor="Gold"
                       FontFamily="Parisienne"
                       FontSize="23"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:"
                       TextColor="Gold"
                       FontFamily="Parisienne"
                       FontSize="23"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:"
                       TextColor="Gold"
                       FontFamily="Parisienne"
                       FontSize="23"/>

                <Label Grid.Row="1" Grid.Column="0" Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                <Label Grid.Row="1" Grid.Column="2" Text="{Binding Estadia}"/>

            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">

                <Label Text="Valor total: "
                       FontFamily="Parisienne"
                       FontSize="23"
                       TextColor="Gold"/>
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}"/>

            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar" 
                HorizontalOptions="Center"
                BackgroundColor="Gold"
                FontFamily="Italianno"
                FontSize="30"
                Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>